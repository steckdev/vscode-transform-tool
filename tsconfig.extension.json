{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/extension.ts",
    "src/transformers.ts",
    "src/helpers.ts",
    "src/constants.ts",
    "src/selectTextProcessor.ts",
    "src/treeProvider.tsx",
    "src/webviewManager.ts",
    "src/index.ts",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/web",
    "src/workers"
  ]
}

